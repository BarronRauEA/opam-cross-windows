  src:
    "https://github.com/savonet/ocaml-flac/releases/download/0.1.7/ocaml-flac-0.1.7.tar.gz"
  checksum: "md5=86b769274b6d831778bc24bda2233db0"
}
depexts: [
  ["flac"] {os-distribution = "mxe"}
]
